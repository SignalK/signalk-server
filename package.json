{
  "name": "signalk-server",
  "version": "1.18.0",
  "description": "An implementation of a [Signal K](http://signalk.org) server for boats.",
  "main": "index.js",
  "scripts": {
    "build": "tsc",
    "build-declaration": "tsc --declaration --allowJs false",
    "watch": "npm run build -- -w",
    "lint": "tslint --config tslint.js --project tsconfig.json --fix",
    "prepublishOnly": "npm run lint && npm run build && npm run build-declaration",
    "create-release": "github-create-release --owner signalk --repository signalk-server-node --npm-base-url https://www.npmjs.com/package/signalk-server",
    "release": "git tag -d v$npm_package_version ;git tag v$npm_package_version && git push --tags && git push && git tag -d latest && git push origin :refs/tags/latest && git tag latest && git push origin tag latest && npm run create-release",
    "start": "node bin/signalk-server",
    "test-only": "mocha --timeout 10000 --exit 'test/**/*.js' 'lib/**/*.test.js'",
    "test": "npm run build && npm run test-only && npm run lint",
    "typedoc": "typedoc",
    "heroku-postbuild": "npm install @signalk/simple-gpx"
  },
  "bin": {
    "signalk-server": "./bin/signalk-server",
    "signalk-server-setup": "./bin/signalk-server-setup",
    "signalk-generate-token": "./bin/signalk-generate-token"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/SignalK/signalk-server-node.git"
  },
  "bugs": {
    "url": "https://github.com/SignalK/signalk-server-node/issues"
  },
  "keywords": [
    "signalk",
    "kjson",
    "nmea",
    "seatalk",
    "gps",
    "sailing",
    "boat",
    "marine",
    "nautic"
  ],
  "author": "Teppo Kurki <teppo.kurki@iki.fi>",
  "contributors": [
    {
      "name": "Fabian Tollenaar",
      "email": "fabian@signalk.org"
    },
    {
      "name": "Scott Bender",
      "email": "scott@scottbender.net"
    },
    {
      "name": "Joachim Bakke"
    },
    {
      "name": "Tim Mathews",
      "email": "tim@signalk.org"
    },
    {
      "name": "Pavel Kalian"
    }
  ],
  "license": "Apache-2.0",
  "engines": {
    "node": "10"
  },
  "dependencies": {
    "@signalk/freeboard-sk": "^1.0.0",
    "@signalk/instrumentpanel": "0.x",
    "@signalk/maptracker": "^1.0.0",
    "@signalk/playground": "^1.0.0",
    "@signalk/sailgauge": "^1.1.0",
    "@signalk/server-admin-ui": "~1.13.0",
    "@signalk/set-system-time": "^1.2.0",
    "@signalk/signalk-schema": "1.3.1",
    "@signalk/signalk-to-nmea0183": "^1.0.0",
    "@signalk/simplegauges": "^1.0.1",
    "@signalk/streams": "~1.4.0",
    "@signalk/zones": "^1.0.0",
    "@types/debug": "^4.1.5",
    "baconjs": "^1.0.1",
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.14.1",
    "chalk": "^3.0.0",
    "clear": "^0.1.0",
    "command-exists": "^1.2.8",
    "compare-versions": "^3.0.1",
    "compression": "^1.7.3",
    "cookie": "^0.4.0",
    "cookie-parser": "^1.4.3",
    "cors": "^2.5.2",
    "debug": "^4.1.0",
    "deep-get-set": "^1.1.0",
    "dev-null-stream": "0.0.1",
    "dnssd2": "1.0.0",
    "errorhandler": "^1.3.0",
    "express": "^4.10.4",
    "express-namespace": "^0.1.1",
    "figlet": "^1.2.0",
    "file-timestamp-stream": "^2.1.2",
    "flatmap": "0.0.3",
    "geolib": "3.1.0",
    "get-installed-path": "^4.0.8",
    "inquirer": "^7.0.0",
    "jsonwebtoken": "^8.1.1",
    "listr": "^0.14.1",
    "lodash": "^4.17.4",
    "minimist": "^1.1.0",
    "moment": "^2.10.6",
    "morgan": "^1.5.0",
    "node-fetch": "^2.6.0",
    "node-gpsd": "^0.3.0",
    "pem": "^1.11.0",
    "primus": "^7.0.0",
    "semver": "^6.0.0",
    "spdy": "^4.0.0",
    "split": "^1.0.0",
    "stat-mode": "^1.0.0",
    "uuid": "^3.2.1",
    "ws": "^7.0.0"
  },
  "devDependencies": {
    "@signalk/github-create-release": "^1.0.0",
    "@types/express": "^4.17.1",
    "@types/lodash": "^4.14.139",
    "@types/node-fetch": "^2.5.3",
    "@types/semver": "^6.2.0",
    "chai": "^4.0.0",
    "chai-things": "^0.2.0",
    "freeport-promise": "^1.0.0",
    "lint-staged": "^9.2.1",
    "mocha": "^6.0.2",
    "prettier": "^1.18.2",
    "request": "^2.81.0",
    "request-promise": "^4.1.1",
    "tslint": "^5.20.0",
    "tslint-config-prettier": "^1.18.0",
    "tslint-plugin-prettier": "^2.0.1",
    "typedoc": "^0.15.0",
    "typescript": "^3.6.3"
  },
  "lint-staged": {
    "src/**/*.{ts,js}": [
      "tslint --project tsconfig.json -c tslint.commit.json --fix",
      "prettier --write",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  }
}
