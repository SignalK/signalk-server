    "@signalk/signalk-to-nmea0183": "^1.0.0",
    "@signalk/vesselpositions": "^1.0.0",
    "@signalk/zones": "^1.0.0",
    "mdns": "^2.5.1",
    "serialport": "^9.0.1"
  },
  "devDependencies": {
    "@signalk/github-create-release": "^1.0.0",
    "@types/chai": "^4.2.15",
    "@types/express": "^4.17.1",
    "@types/lodash": "^4.14.139",
    "@types/mocha": "^8.2.0",
    "@types/node-fetch": "^2.5.3",
    "@types/pem": "^1.9.6",
    "@types/semver": "^7.1.0",
    "@types/serialport": "^8.0.1",
    "@types/split": "^1.0.0",
    "@types/uuid": "^8.3.1",
    "chai": "^4.0.0",
    "chai-json-equal": "0.0.1",
    "chai-things": "^0.2.0",
    "freeport-promise": "^1.0.0",
    "lint-staged": "^10.0.3",
    "mocha": "^7.0.1",
    "prettier": "^1.18.2",
    "rimraf": "^3.0.2",
    "tslint": "^5.20.0",
    "tslint-config-prettier": "^1.18.0",
    "tslint-plugin-prettier": "^2.0.1",
    "typedoc": "^0.17.3",
    "typescript": "^3.6.3"
  },
  "lint-staged": {
    "src/**/*.{ts,js}": [
      "tslint --project tsconfig.json -c tslint.commit.json --fix",
      "prettier --write",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "funding": "https://opencollective.com/signalk"
}
