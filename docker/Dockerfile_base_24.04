FROM ubuntu:24.04
ARG NODE

RUN userdel -r ubuntu
RUN groupadd --gid 1000 node \
  && useradd --uid 1000 --gid node --shell /bin/bash --create-home node

# Install Node.js from NodeSource (before other packages that might pull in system nodejs)
# The setup script adds the NodeSource repo, then we update and install from it
RUN DEBIAN_FRONTEND=noninteractive apt-get update \
  && DEBIAN_FRONTEND=noninteractive apt-get -y install --no-install-recommends curl ca-certificates gnupg \
  && curl -fsSL https://deb.nodesource.com/setup_${NODE} | bash - \
  && DEBIAN_FRONTEND=noninteractive apt-get update \
  && DEBIAN_FRONTEND=noninteractive apt-get -y install nodejs \
  && npm config rm proxy \
  && npm config rm https-proxy \
  && npm config set fetch-retries 5 \
  && npm config set fetch-retry-mintimeout 60000 \
  && npm config set fetch-retry-maxtimeout 120000 \
  && npm cache clean -f \
  && npm install npm@latest -g

# Install other dependencies (after Node.js is installed)
RUN DEBIAN_FRONTEND=noninteractive apt-get -y install --no-install-recommends \
  git python3 python3-venv python3-pip build-essential \
  avahi-daemon avahi-discover avahi-utils libnss-mdns mdns-scan libavahi-compat-libdnssd-dev \
  sysstat procps nano sudo dbus bluez libcap2-bin \
  && groupadd -r docker -g 991 && groupadd -r i2c -g 990 && groupadd -r spi -g 989 \
  && usermod -a -G dialout,i2c,spi,netdev,docker node \
  && setcap cap_net_raw+eip $(eval readlink -f `which node`)

# Modification to set time without need to use sudo
RUN chmod u+s /usr/bin/date

COPY docker/avahi/avahi-dbus.conf /etc/dbus-1/system.d/avahi-dbus.conf
COPY docker/bluez/bluezuser.conf /etc/dbus-1/system.d/bluezuser.conf
RUN mkdir -p /var/run/dbus/ \
  && chmod -R 777 /var/run/dbus/ \
  && mkdir -p /var/run/avahi-daemon/ \
  && chmod -R 777 /var/run/avahi-daemon/ \
  && chown -R avahi:avahi /var/run/avahi-daemon/

RUN rm -rf /var/lib/apt/lists/* /tmp/* /var/tmp/*
