{
  "$schema": "https://typedoc.org/schema.json",
  "name": "Signal K",
  "entryPointStrategy": "packages",
  "entryPoints": [
    ".",
  ],
  "packagesRequiringDocumentation": ["signalk-server", "@signalk/server-api"],
  "out": "docs/dist",
  "projectDocuments": [
    "docs/src/index.md",
    "docs/src/installation/install.md",
    "docs/src/setup/configuration.md",
    "docs/src/features/index.md",
    "docs/src/develop/developer_notes.md",
    "docs/src/support/help.md",
    "docs/src/support/sponsor.md"
  ],
  "packageOptions": {
    "sort": [
      "kind",
      "instance-first",
      "required-first",
      "alphabetical-ignoring-documents"
    ],
  },
  "searchInComments": true,
  "searchInDocuments": true,
  "navigationLinks": {
    "Specification": "https://signalk.org/specification/1.5.0/doc/",
    "GitHub": "https://github.com/SignalK/signalk-server",
    "Website": "https://signalk.org"
  },
  "sort": [
    "documents-first",
    "kind",
    "instance-first",
    "required-first",
    "alphabetical-ignoring-documents"
  ],
  // "treatWarningsAsErrors": true,
  "includeHierarchySummary": false,
  "navigation": {
    "includeCategories": true,
    "includeGroups": false,
    "excludeReferences": true,
    "includeFolders": false,
    "compactFolders": false
  },
  "visibilityFilters": {},
  "excludeProtected": true,
  "excludePrivate": true,
  "sortEntryPoints": true,
  "exclude": [
    // "packages/resources-provider-plugin",
    "packages/server-admin-ui",
    "packages/server-admin-ui-dependencies",
    "packages/streams",
    "packages/typedoc-theme"
  ]
}
